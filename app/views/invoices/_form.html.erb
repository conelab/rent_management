<%= form_for(@invoice, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @invoice.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h4>

      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :tennant_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :tennant_id, Tennant.all, :id, :name, {}, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :property_id, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select :property_id, Property.all, :id, :name, {}, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :amount_paid, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :amount_paid, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :status, Invoice.statuses, {}, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
