<div class="page-header">
  <%= link_to new_invoice_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Invoice
  <% end %>
  <h1>Listing invoices</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Price</th>
            <th>Tennant</th>
            <th>Property</th>
            <th>Amount paid</th>
            <th>Status</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @invoices) do |invoice| %>
            <td><%= invoice.price %></td>
            <td><%= invoice.tennant_id %></td>
            <td><%= invoice.property_id %></td>
            <td><%= invoice.amount_paid %></td>
            <td><%= invoice.status %></td>
            <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
